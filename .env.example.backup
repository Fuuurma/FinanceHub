# FinanceHub Development Environment Configuration
# Copy to .env and fill in your values

# Django Settings
DJANGO_SECRET_KEY=change-this-to-a-random-secret-key-in-production
DJANGO_SETTINGS_MODULE=core.settings
DJANGO_DEBUG=True

# Database Configuration
DATABASE_URL=postgres://financehub:financehub_dev_password@localhost:5432/finance_hub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_hub
DB_USER=financehub
DB_PASSWORD=financehub_dev_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# API Keys (External Services)
# Get your free API keys from:
# - Alpha Vantage: https://www.alphavantage.co/support/#api-key
# - Finnhub: https://finnhub.io/register
# - IEX Cloud: https://iexcloud.io/pricing
# - Polygon.io: https://polygon.io/pricing
# - Coingecko: https://www.coingecko.com/en/api
# - FRED: https://fred.stlouisfed.org/docs/api/api_key.html

ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
FRED_API_KEY=your_fred_api_key_here

# News API
NEWS_API_KEY=your_news_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# WebSocket Configuration
WS_PORT=8001
WS_PROTOCOL=ws

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_email_password

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=financehub-uploads

# CDN Configuration (CloudFlare) - D-007
# Enable CDN for static and media files in production
CDN_ENABLED=False
CDN_URL=https://assets.financehub.app

# CloudFlare API credentials (for cache purging on deployment)
# Get these from: CloudFlare Dashboard > My Profile > API Tokens
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_WEBSOCKET=True
ENABLE_AI_FEATURES=True
ENABLE_REALTIME_DATA=True
ENABLE_BACKGROUND_JOBS=True

# Rate Limiting
RATE_LIMIT_ENABLE=True
RATE_LIMIT_RATE=100/hour

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend Environment
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8001

# Development Settings
HOT_RELOAD=True
SHOW_DEBUG_TOOLBAR=True
